<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greenPastelDark">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="260dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="No recent searches"
                android:gravity="center"
                android:textStyle="italic|bold"
                android:textColor="@color/solidGray"
                android:textSize="14sp">

            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/plant1">

            </ImageView>

        </RelativeLayout>

        <ImageView
            android:id="@+id/green"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/greenPastelDark"></ImageView>

        <RelativeLayout
            android:id="@+id/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:background="@color/greenPastelDark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/search_background">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search_background_button">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/search2" />
                </RelativeLayout>

                <EditText
                    android:layout_width="260dp"
                    android:layout_height="100dp"
                    android:background="@null"
                    android:hint="Search plants"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:textSize="14sp" />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    


</androidx.constraintlayout.widget.ConstraintLayout>