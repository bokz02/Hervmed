<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main2">


    

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/greenPastelDark">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_above="@+id/green"
        android:layout_marginBottom="330dp"
        android:background="@drawable/home_blue_background">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/hervmed2">

        </ImageView>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="118dp"
            android:layout_marginBottom="117dp"
            android:background="@drawable/bulb2"
            android:translationZ="91dp">

        </ImageView>

        <RelativeLayout
            android:id="@+id/didyouknow"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="123dp"
            android:background="@color/greenPastel"
            android:translationZ="90dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Did you know?"
                android:textSize="14sp"
                android:textStyle="bold|italic">

            </TextView>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="65dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/textViewDidYouKnow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="If onions make you cry when you chop them, itâ€™s because they give off sulphenic acid, a serious irritant, when you cut them."
                android:textSize="14sp">

            </TextView>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <ImageView
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/greenPastelDark">

    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:layout_above="@id/green"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/whiteParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/leaf2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/leaf1">

            </ImageButton>

            <ImageButton
                android:id="@+id/heart1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/leaf2"
                android:background="@drawable/heart">

            </ImageButton>

            <ImageButton
                android:id="@+id/leaf3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/leaf2"
                android:background="@drawable/leaf2"></ImageButton>

            <ImageButton
                android:id="@+id/drug"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottle1"></ImageButton>

            <ImageButton
                android:id="@+id/leaf4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/drug"
                android:background="@drawable/leaf4"></ImageButton>

            <ImageButton
                android:id="@+id/poison"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/drug"
                android:background="@drawable/poison1"></ImageButton>

            <ImageButton
                android:id="@+id/edible"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/spoon3"></ImageButton>

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_below="@id/heart1"
                android:layout_marginLeft="40dp"
                android:text="Popular"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_below="@id/leaf2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Traditional"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_below="@id/leaf3"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="35dp"
                android:gravity="center"
                android:text="Rare"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_below="@id/leaf4"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="35dp"
                android:gravity="center"
                android:text="Common"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_below="@id/leaf4"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Drugs"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/poisonous"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_below="@id/leaf4"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="22dp"
                android:gravity="center"
                android:text="Poisonous"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:text="Edible"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="14sp">


            </TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

